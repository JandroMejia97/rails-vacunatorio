<%= stylesheet_link_tag 'sessions', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= form_for @user,  html: {class: "auth-form"} do |f| %>
    <h1>
        Ingresá tus datos personales
    </h1>

    <div class="mb-3">
        <%= f.label :first_name, 'Nombre(s)', class: "form-label" %>
        <%= f.text_field :first_name, placeholder: 'Ingresa tu nombre(s)', class: "form-control" %>
    </div>
  
    <div class="mb-3">
        <%= f.label :last_name, 'Apellido(s)', class: "form-label" %>
        <%= f.text_field :last_name, placeholder: 'Ingresa tu apellido(s)', class: "form-control" %>
    </div>
  
    <div class="mb-3">
        <%= f.label :document_number, 'Número de documento', class: "form-label" %>
        <%= f.number_field :document_number, placeholder: 'Ingrese tu número de documento', class: "form-control" %>
    </div>

    <div class="mb-3">
        <%= f.label :birthdate, 'Fecha de nacimiento', class: "form-label" %>
        <%= f.date_field :birthdate, as: :date, placeholder: 'dd/MM/AAAA', class: "form-control" %>
    </div>

    <div class="mb-3">
        <%= f.label :comorbidity, '¿Padeces alguna conmorbilidad?', class: "form-label" %>
        <div>
            <div class="form-check form-check-inline">
                <%= f.label :comorbidity, "Sí", :value => "true", class: "form-check-label" %>
                <%= f.radio_button :comorbidity, true, class: "form-check-input" %>
            </div>
            <div class="form-check form-check-inline">
                <%= f.label :comorbidity, "No", :value => "false", class: "form-check-label" %>
                <%= f.radio_button :comorbidity, false, class: "form-check-input" %>
            </div>
        </div>
    </div>
  <%= f.submit "Regístrarme", :class => "btn btn-primary" %>
<% end %>