<h1>
 <%= t 'campaign.batch_entry' %>
</h1>
<%= form_for @campaign, method: :patch do |form| %>
  <div class="form-group col-12 mb-3">
    <%= form.label:stock, t('campaign.update_stock'), class: "form-label" %>
    <%= form.number_field :stock, value: 1, class: "form-control", min: 1, placeholder: t('campaign.update_stock_placeholder') %>
  </div>
  <div class="form-group col-12 mb-3">
    <%= form.submit t('vaccines.load_batch'), class: "btn btn-primary" %>
  </div>
<% end %>