<h1>Turnos del dia  <%= Date.today %></h1>

<div class="row mb-4">
  <div class="col-12 d-flex justify-content-between align-items-center">
<%= form_tag @turnos, :method => "get" do %>
  <h4><%= label_tag(:search, "Buscar un paciente") %></h4>
  <%= number_field_tag :search, params[:search] %>
  <%= submit_tag("Buscar",:name => nil, class: "btn btn-primary")%>
  <% end %>
  </div>
</div>

<% if @turns==nil %>
<%= t('turn.not_today') %>
<%else%>
<% @turns.each do |t| %>
  <% if t.campaign_id == 2 %>  
    <div class="row">
      <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12 mb-3">
        <div class="card">
          <div class="card-header">
           <h2>
             <%= t 'turn.covid' %>
           </h2>
         </div>
         <div class="card-body <%= 'empty' unless @covid_turns.length > 0 %>">
           <table>
              <tbody>
                 <tr>
                    <td><%= User.find_by(id: t.user_id).document_number %> - <%= User.find_by(id: t.user_id).first_name %> <%= User.find_by(id: t.user_id).last_name %></td>
                </tr>
             </tbody>
           </table>
           <%= link_to t('vaccines.cargar'),{:controller => "applied_vaccines", :action => "new", :turn => t},class: "btn btn-primary" %>
          </div>
        </div>
      </div>
  <% else %>
    <% if t.campaign_id == 3 %>
      <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12 mb-3">
        <div class="card">
          <div class="card-header">
            <h2>
            <%= t 'turn.yellow_fever' %>
            </h2>
          </div>
          <div class="card-body <%= 'empty' unless @fever_turns.length > 0 %>">
            <table>
             <tbody>
                <tr>
                <td><%= User.find_by(id: t.user_id).document_number %> - <%= User.find_by(id: t.user_id).first_name %> <%= User.find_by(id: t.user_id).last_name %></td>
                </tr>
             </tbody>
            </table>
            <%= link_to  t('vaccines.cargar'),{:controller => "applied_vaccines", :action => "new", :turn => t},class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12 mb-3">
        <div class="card">
          <div class="card-header">
            <h2>
              <%= t 'turn.common_flu' %>
            </h2>
          </div>
          <div class="card-body <%= 'empty' unless @flu_turns.length > 0 %>">
              <table>
                <tbody>
                    <tr>
                    <td><%= User.find_by(id: t.user_id).document_number %> - <%= User.find_by(id: t.user_id).first_name %> <%= User.find_by(id: t.user_id).last_name %></td>
                    </tr>
                </tbody>
              </table>
              <%= link_to  t('vaccines.cargar'),{:controller => "applied_vaccines", :action => "new", :turn => t},class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <%end%>
    </div>
  <%end%>
<%end%>
<%end%>