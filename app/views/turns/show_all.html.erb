<div class="row mb-4">
  <div class="col-12 d-flex justify-content-between align-items-center">
    <%= link_to t('turn.today'), pending_turns_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="row mb-4">
  <div class="col-12 d-flex justify-content-between align-items-center">

    <%= link_to t('turn.filter'), new_turn_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="col-lg-4 col-md-6 col-sm-12 col-xs-12 mb-3">
    <div class="card">
      <div class="card-header">
        <h2>
          <%= t 'turn.finished' %>
        </h2>
      </div>
      <div class="card-body <%= 'empty' unless @turns.length > 0 %>">
        <% if @turns.length > 0 %>
        <table>
          <thead>
            <tr>
              <th>
                <%= t 'turn.campaign' %>
              </th>
              <th>
                <%= t 'turn.information' %>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @turns.each do |turn| %>
              <tr>
                <td><%= Campaign.find_by(id: turn.campaign_id).name %></td>
                <td><%= User.find_by(id: turn.user_id).document_number %></td>
              </tr>
            <% end %>
          </tbody>
          
        </table>
        <% else %>
          <p>
            <%= t 'turn.no_finished' %>
          </p>
        <% end %>
      </div>
    </div>
  </div>