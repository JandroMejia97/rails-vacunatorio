<div class="row mb-4">
  <div class="col-12 d-flex justify-content-between align-items-center">
    <%= link_to t('turn.today'), pending_turns_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="container">
<div class="row">
<div class="col">
<%= form_tag @turnos, :method => "get" do %>
  <h4><%= label_tag(:search_date, "Filtrar por fecha") %></h4>
  <%= date_field_tag :search_date, params[:search] %>
  <%= submit_tag("Filtrar",:date => nil, class: "btn btn-primary")%>
  <% end %>
  </div>

<div class="col">
<%= form_tag @turnos, :method => "get" do %>
  <h4><%= label_tag(:search_status, "Filtrar por estado") %></h4>
  <%= select_tag :search_status, options_for_select(Turn.statuses.map { |key,value| [t(key), value] }) %>
  <%= submit_tag("Filtrar", class: "btn btn-primary")%>
  <% end %>
  </div>
  </div>
  </div>
  <p>
  </p>
<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 mb-3">
    <div class="card">
      <div class="card-header">
        <h2>
          <%= t 'sidebar.turns' %>
        </h2>
      </div>
      <div class="card-body <%= 'empty' unless @turns.length > 0 %>">
        <% if @turns.length > 0 %>
        <table>
          <thead>
            <tr>
              <th>
                <%= t 'turn.campaign' %>
              </th>
              <th>
              <p>
              </p>
              </th>
              <th>
                <%= t 'turn.information' %>
              </th>
              <th>
              <p>
              </p>
              </th>
              <th>
              <%= t 'turn.estado' %>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @turns.each do |turn| %>
              <tr>
                <td><%= turn.campaign.name %></td>
                <td><p></p></td>
                <td><%= turn.user.document_number %></td>
                <td><p></p></td>
                <td><%= t turn.status %> </td>
              </tr>
            <% end %>
          </tbody>
          
        </table>
        <% else %>
          <p>
            <%= t 'turn.no_finished' %>
          </p>
        <% end %>
      </div>
    </div>
  </div>

  <% if has_role?(:vacunador,current_user) %>
  <div class="row mb-4">
  <div class="col-12 d-flex justify-content-between align-items-center">
    <%= link_to t('base_text.manual_assign'), new_manual_path, class: "btn btn-primary" %>
  </div>
  <% end %>
</div>