<div class="row mb-4">
  <div class="col-12 d-flex justify-content-between align-items-center">
    <%= link_to t('turn.today'), pending_turns_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="row mb-4">
  <div class="col-12 d-flex justify-content-between align-items-center">
<%= form_tag @turnos, :method => "get" do %>
  <h4><%= label_tag(:search_date, "Filtrar por fecha") %></h4>
  <%= date_field_tag :search_date, params[:search] %>
  <%= submit_tag("Filtrar",:date => nil, class: "btn btn-primary")%>
  <% end %>
  </div>
</div>

<div class="col-lg-4 col-md-6 col-sm-12 col-xs-12 mb-3">
    <div class="card">
      <div class="card-header">
        <h2>
          <%= t 'sidebar.turns' %>
        </h2>
      </div>
      <div class="card-body <%= 'empty' unless @turns.length > 0 %>">
        <% if @turns.length > 0 %>
        <table>
          <thead>
            <tr>
              <th>
                <%= t 'turn.campaign' %>
              </th>
              <th>
                <%= t 'turn.information' %>
              </th>
              <th>
              <%= t 'turn.estado' %>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @turns.each do |turn| %>
              <tr>
                <td><%= Campaign.find_by(id: turn.campaign_id).name %></td>
                <td><%= User.find_by(id: turn.user_id).document_number %></td>
                <td><%= turn.status %> </td>

              </tr>
            <% end %>
          </tbody>
          
        </table>
        <% else %>
          <p>
            <%= t 'turn.no_finished' %>
          </p>
        <% end %>
      </div>
    </div>
  </div>

  <% if has_role?(:vacunador,current_user) %>
  <div class="row mb-4">
  <div class="col-12 d-flex justify-content-between align-items-center">
    <%= link_to t('base_text.manual_assign'), new_manual_path, class: "btn btn-primary" %>
  </div>
  <% end %>
</div>