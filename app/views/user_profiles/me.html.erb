<h1>Bienvenido</h1>
<%= link_to t('auth.logout.logout'), auth_logout_path, class: "btn btn-primary"%>
<div class="card">
    <div clas="card-header">
        Tus datos personales
    </div>

    <% age = ((Time.zone.now - @user.birthdate.to_time) / 1.year.seconds).floor %>

    <div class="card-body">
        <h5 class="card-title"> <%= @user.first_name %> (<%= age %> Anios) </h5>
        <p class="card-text"> <%= @user.email %> </p>
        <p class="card-text"> DNI <%= @user.document_number %> - <%=  %> </p>
        <% if @user.comorbidity %>
            <p class="card-text"> Padeces alguna comorbilidad </p>
        <% else %>
            <p class="card-text"> No padeces ninguna comorbilidad </p>
        <% end %>
        <a href="#" class="btn btn-primary">Modifica tus Datos</a>
    </div>
</div>
