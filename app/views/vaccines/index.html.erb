<div class="row mb-4">
  <div class="col-12 d-flex justify-content-between align-items-center">
    <h1>
      <%= t 'vaccines.title' %>
    </h1>
    <%# <%= link_to t('vaccines.add_vaccine'), new_vaccine_path, class: "btn btn-primary" %>
  </div>
</div>


<div class="row">
  <% @campaigns.each do |campaign| %>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 mb-3">
      <div class="card">
        <div class="card-header">
          <h2>
            <%= campaign.name %>
          </h2>
        </div>
        <div class="card-body text-center <%= 'empty' unless campaign.vaccines.length > 0 %>">
          <% if campaign.vaccines.length > 0 %>
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">
                  <%= t 'base_text.name' %>
                </th>
                <th scope="col">
                  <%= t 'vaccines.number_of_doses' %>
                </th>
                <th scope="col">
                  <%= t 'vaccines.stock' %>
                </th>
                <th scope="col">
                  <%= t 'base_text.actions' %>
                </th>
              </tr>
            </thead>
            <tbody>
              <% campaign.vaccines.each do |vaccine| %>
                <tr>
                  <th scope="row">
                    <%= vaccine.name %>
                  </th>
                  <td>
                    <%= vaccine.number_of_doses %>
                  </td>
                  <td>
                    <%= get_vaccine_stock vaccine %>
                  </td>
                  <td>
                    <%= link_to t('base_text.show'), vaccine, class: "btn btn-outline-secondary btn-sm" %>
                    <%= link_to t('base_text.edit'), edit_vaccine_path(vaccine), class: "btn btn-outline-primary btn-sm" %>
                    <%= link_to t('base_text.destroy'), vaccine, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %>
                  </td>
                </tr>
              <% end %>
                <tr>
                  <th scope="row" colspan="2">
                    <%= t 'vaccines.vaccines_available' %>
                  </th>
                  <td>
                    <%= get_quantity_of_vaccines_available campaign.vaccines %>
                  </td>
                  <td>
                    <%= link_to t('vaccines.assign_shifts'), "", class: "btn btn-secondary btn-sm disabled" %>
                    <%# <%= link_to t('vaccines.load_batch'), "", class: "btn btn-primary btn-sm disabled" %>
                  </td>
                </tr>
            </tbody>
          </table>
          <% else %>
            <p>
              <%= t 'vaccines.empty' %>
            </p>
          <% end %>
          <%# <%= link_to t('vaccines.add_vaccine'), { action: "new", controller: "vaccines", campaign: campaign.id}, class: "btn btn-primary mt-3" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
